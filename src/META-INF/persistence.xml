<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="Tp1PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>tp1.javabeans.ClientTTC</class>
    <class>tp1.javabeans.AddressTTC</class>
    <class>tp1.javabeans.Role</class>
    <properties>
      <property name="eclipselink.target-database" value="MYSQL"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/time-to-cook"/>
      <property name="javax.persistence.jdbc.user" value="time-to-cook"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="time-to-cook"/>
      <property name="eclipselink.ddl-generation" value="none"/>
      <property name="eclipselink.ddl-generation.output-mode" value="database"/>
    </properties>
  </persistence-unit>
</persistence>
